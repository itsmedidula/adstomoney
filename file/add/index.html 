<!-- LOGIC SCRIPT -->
<script>
    /**
     * ==========================================
     * âš™ï¸ SITE CONFIGURATION
     * Edit this section to change page content
     * ==========================================
     */
    const siteConfig = {
        fileName: "${escapeHtml(cfg.fileName)}",
        fileDescription: "${escapeHtml(cfg.fileDescription)}",
        ownerName: "${escapeHtml(cfg.ownerName)}",
        
        // File Details Card
        fileSize: "${escapeHtml(cfg.fileSize)}",
        version: "${escapeHtml(cfg.version)}",
        status: "${escapeHtml(cfg.status)}",
        
        // Download Settings
        finalDownloadUrl: "${escapeHtml(cfg.finalDownloadUrl)}", 
        adsJsonFile: "${escapeHtml(cfg.adsJsonFile)}"
    };

    /**
     * ==========================================
     * ðŸ§  APP LOGIC (DO NOT EDIT BELOW)
     * ==========================================
     */

    // 1. POPULATE CONTENT FROM CONFIG
    function initContent() {
        document.title = `${cfg.fileName} - Premium Download`;
        document.getElementById('nav-brand').textContent = siteConfig.ownerName;
        document.getElementById('footer-brand').textContent = siteConfig.ownerName;
        document.getElementById('footer-year').textContent = new Date().getFullYear();
        
        document.getElementById('hero-filename').textContent = siteConfig.fileName;
        document.getElementById('hero-desc').textContent = siteConfig.fileDescription;
        
        document.getElementById('info-size').textContent = siteConfig.fileSize;
        document.getElementById('info-version').textContent = siteConfig.version;
        document.getElementById('info-status').textContent = siteConfig.status;
    }

    // Run Content Init
    initContent();

    // 2. ANIMATIONS
    AOS.init({
        duration: 800,
        once: true,
        offset: 50
    });

    // 3. DOWNLOAD & ADS LOGIC
    let adLinks = [];
    let currentStep = 0;
    let totalSteps = 0;
    let isLoading = false;

    // DOM Elements
    const btn = document.getElementById('download-btn');
    const btnText = document.getElementById('btn-text');
    const btnIcon = document.getElementById('btn-icon');
    const btnSpinner = document.getElementById('btn-spinner');
    const progressBar = document.getElementById('progress-bar');
    const statusText = document.getElementById('status-text');

    // Load ads from JSON
    async function loadAds() {
        try {
            const response = await fetch(siteConfig.adsJsonFile);
            adLinks = await response.json();
            totalSteps = adLinks.length;
        } catch (error) {
            console.error("Failed to load ads, default to 0 steps", error);
            totalSteps = 0;
        }
    }
    loadAds();

    function updateUI(percent, status, buttonLabel, showSpinner = false) {
        progressBar.style.width = `${percent}%`;
        statusText.innerText = status;
        btnText.innerText = buttonLabel;
        
        if (showSpinner) {
            btnSpinner.style.display = "block";
            btnIcon.style.display = "none";
            btn.classList.add("opacity-75", "cursor-wait");
        } else {
            btnSpinner.style.display = "none";
            btnIcon.style.display = "block";
            btn.classList.remove("opacity-75", "cursor-wait");
        }
    }

    btn.addEventListener('click', () => {
        if (isLoading) return;

        // Case: All steps done, trigger final download
        if (currentStep >= totalSteps) {
            startFinalDownload();
            return;
        }

        // Case: Handle Ad Step
        handleAdStep(currentStep);
    });

    function handleAdStep(stepIndex) {
        isLoading = true;
        const currentAdUrl = adLinks[stepIndex];
        
        updateUI((currentStep / totalSteps) * 100, "Opening secure link...", "Please Wait...", true);

        setTimeout(() => {
            // Open Montag Link
            window.open(currentAdUrl, '_blank');
            
            statusText.innerText = `Waiting for verification (Step ${currentStep + 1}/${totalSteps})...`;
            
            // Wait 3 seconds to simulate user viewing the ad
            setTimeout(() => {
                finishStep();
            }, 3000); 

        }, 800);
    }

    function finishStep() {
        currentStep++;
        isLoading = false;
        
        const percent = (currentStep / totalSteps) * 100;
        
        if (currentStep < totalSteps) {
            updateUI(percent, `Verification ${currentStep}/${totalSteps} Complete`, `Continue (${currentStep}/${totalSteps})`);
            btnIcon.className = "ph-bold ph-arrow-right";
        } else {
            // Ready
            updateUI(100, "Verification Complete!", "Get Link");
            btnIcon.className = "ph-bold ph-download-simple";
            
            // Make bar green
            progressBar.classList.remove("from-cyan-400", "to-blue-600");
            progressBar.classList.add("bg-green-500");
            statusText.classList.add("text-green-400");
        }
    }

    function startFinalDownload() {
        isLoading = true;
        updateUI(100, "Starting download...", "Downloading...", true);
        
        setTimeout(() => {
            window.location.href = siteConfig.finalDownloadUrl;
            
            setTimeout(() => {
                isLoading = false;
                updateUI(100, "Download Started!", "Download Again", false);
            }, 2000);
        }, 1500);
    }
</script>

</body>
</html>`;
      return tpl;
    }// Escape helper for safe insertion inside template literal
function escapeHtml(str){
  if(!str) return '';
  return str.replace(/&/g,'&amp;').replace(/</g,'&lt;').replace(/>/g,'&gt;').replace(/"/g,'&quot;').replace(/'/g,'&#39;');
}

// Generate action
generateBtn.addEventListener('click', () => {
  const cfg = {
    fileName: fields.fileName.value.trim(),
    fileDescription: fields.fileDescription.value.trim(),
    ownerName: fields.ownerName.value.trim(),
    fileSize: fields.fileSize.value.trim(),
    version: fields.version.value.trim(),
    status: fields.status.value.trim(),
    finalDownloadUrl: fields.finalDownloadUrl.value.trim(),
    adsJsonFile: fields.adsJsonFile.value.trim() || 'ads.json'
  };

  // Build template and set into textarea
  const html = buildTemplate(cfg);
  generatedCode.value = html;

  // small UX cue
  generateBtn.textContent = 'Generated âœ“';
  setTimeout(()=> generateBtn.textContent = 'Generate', 1200);
});

// Copy to clipboard
copyBtn.addEventListener('click', async () => {
  try{
    await navigator.clipboard.writeText(generatedCode.value);
    copyBtn.textContent = 'Copied âœ“';
    setTimeout(()=> copyBtn.textContent = 'Copy', 1200);
  }catch(e){
    alert('Copy failed â€” please select and copy manually.');
  }
});

// Download file
downloadBtn.addEventListener('click', () => {
  const content = generatedCode.value;
  if(!content) return alert('Please generate the page first.');
  const blob = new Blob([content], { type: 'text/html' });
  const url = URL.createObjectURL(blob);
  const a = document.createElement('a');
  a.href = url;
  a.download = (fields.fileName.value.trim() || 'landing') + '.html';
  document.body.appendChild(a);
  a.click();
  a.remove();
  URL.revokeObjectURL(url);
  downloadBtn.textContent = 'Downloaded âœ“';
  setTimeout(()=> downloadBtn.textContent = 'Download .html', 1200);
});

// Preview
previewBtn.addEventListener('click', () => {
  const content = generatedCode.value;
  if(!content) return alert('Please generate the page first.');
  const blob = new Blob([content], { type: 'text/html' });
  const url = URL.createObjectURL(blob);
  previewFrame.src = url;
  previewArea.classList.remove('hidden');
});

closePreview.addEventListener('click', ()=>{
  previewFrame.src = 'about:blank';
  previewArea.classList.add('hidden');
});

// Auto-generate on load so user sees code immediately
window.addEventListener('load', ()=> generateBtn.click());

  </script>
</body>
</html>