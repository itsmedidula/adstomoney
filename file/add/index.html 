  });

  const [copied, setCopied] = useState(false);
  const [showPreview, setShowPreview] = useState(false);

  const handleChange = (field, value) => {
    setConfig(prev => ({ ...prev, [field]: value }));
  };

  const generateHTML = () => {
    return `<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
<head>
